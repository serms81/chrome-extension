{
  // Required
  "manifest_version": 2,
  "name": "Hooptap SDK Chrome Extension",
  "author": "Hooptap",
  "version": "0.1",

  //"default_locale": "en",
  "description": "A plain text description",
  "icons" : {
    "48" : "icon-48.png",
    "128" : "icon-128.png"
  },
  "default_locale": "en",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.com/*"],
      "css": ["content_script.css"],
      "js" : ["content_script2.js"],
      "run_at": "document_end"
    }
  ],
  /*"externally_connectable": {
    "matches": ["*://*.clubpremier.com/*"]
  },*/
  "devtools_page": "devtools.html",
  "options_ui": {
    // Required.
    "page": "options.html",
    // Recommended.
    "chrome_style": true
    // Not recommended; only provided for backwards compatibility,
    // and will be unsupported in a future version of Chrome (TBD).
    //"open_in_tab": true
  },

  // About Action
  //"browser_action": {
  "page_action": {
    // represent actions that can be taken on the current page,
    // but that aren't applicable to all pages.
    "default_icon": {                    // optional
      //"38": "icon-38.png",            // optional
      "19": "icon-19.png"           // optional
    },
    "default_title": "Hooptap SDK"      // optional; shown in tooltip
    //"default_popup": "popup.html"        // optional
  },

  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "activeTab",
    "declarativeContent",
    "http://*/*",
    "https://*/*"
  ]

}